{
  "name": "relay-workshop",
  "version": "2.0.0",
  "author": "Sibelius Seraphini <sibeliusseraphini@gmail.com> (https://twitter.com/sseraphini)",
  "contributors": ["Thiago Marinho <tgmarinho@gmail.com> (https://twitter.com/tgmarinho)"],
  "description": "Learn the best practices about how to use a Fullstack Node.js, GraphQL, Relay, React, modern stack",
  "devDependencies": {
    "@babel/preset-modules": "0.1.5",
    "@types/bcryptjs": "^2.4.1",
    "@types/dotenv-safe": "8.1.2",
    "@types/dotenv-webpack": "7.0.3",
    "@types/graphql-relay": "^0.7.0",
    "@types/history": "5.0.0",
    "@types/isomorphic-fetch": "0.0.36",
    "@types/jest": "^29.0.0",
    "@types/jscodeshift": "^0.11.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-convert": "^1.2.0",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-multer": "^1.0.0",
    "@types/koa-router": "^7.4.1",
    "@types/mockdate": "^3.0.0",
    "@types/mongoose": "^5.11.58",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-relay": "14.1.3",
    "@types/react-router-config": "^5.0.1",
    "@types/rebass": "^4.0.7",
    "@types/relay-runtime": "14.1.10",
    "@types/relay-test-utils": "^14.1.0",
    "@types/styled-components": "5.1.26",
    "@types/styled-system": "5.1.16",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "babel-jest": "29.5.0",
    "concurrently": "^8.0.1",
    "crypto-browserify": "^3.12.0",
    "esbuild-register": "^3.3.2",
    "eslint": "8.37.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-okonet": "7.0.2",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-shellscape": "6.0.0",
    "eslint-import-resolver-lerna": "^2.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-cypress": "2.13.2",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-relay": "1.8.3",
    "eslint-plugin-typescript": "0.14.0",
    "git-json-merge": "^1.0.0",
    "https-browserify": "^1.0.0",
    "hygen": "6.2.11",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.0.1",
    "jest-junit": "15.0.0",
    "lint-staged": "^13.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "2.8.7",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "tsup": "^5.12.6",
    "turbo": "1.6.3",
    "esbuild": "0.17.16"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.yml": [
      "prettier --write"
    ]
  },
  "pre-commit": "lint:staged",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sibelius/relay-workshop.git"
  },
  "resolutions": {
    "graphql": "16.6.0",
    "html-webpack-plugin": "5.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-system": "5.1.5",
    "webpack": "5.74.0"
  },
  "scripts": {
    "b": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\"",
    "build:server": "turbo run build --filter=@workshop/server",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "copy-envs": "cp apps/server/.env.example apps/server/.env && cp apps/web/.env.example apps/web/.env",
    "es": "node -r esbuild-register",
    "get-token": "pnpm run b apps/server/scripts/getToken.ts",
    "jest": "jest",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "prettier": "turbo run prettier --write **/src/**/*.ts && prettier --write **/src/**/*.tsx",
    "relay": "pnpm run relay --parallel --ignore @workshop/0* --ignore @workshop/1*",
    "seed": "pnpm run workspace @workshop/server seed",
    "server": "turbo run start --filter=@workshop/server",
    "server:serve": "turbo run --filter=@workshop/server",
    "start": "turbo run start --filter=@workshop/web --filter=@workshop/server",
    "update-schema": "pnpm run w apps/server/scripts/updateSchema.ts",
    "schema": "pnpm run w apps/server/scripts/updateSchema.ts",
    "w": "pnpm run b webpackx.ts",
    "web": "turbo run start --filter @workshop/web",
    "web-react-router": "yarn workspace @workshop/web-react-router start",
    "next:dev": "turbo run dev --filter=@workshop/next",
    "next:build": "turbo run build --filter=@workshop/next",
    "nextapp:dev": "turbo run dev --filter=@workshop/nextapp",
    "nextapp:build": "turbo run build --filter=@workshop/nextapp"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "workshop/*",
      "solutions/*"
    ]
  },
  "packageManager": "pnpm@7.14.2",
  "engines": {
    "node": ">=16"
  }
}
